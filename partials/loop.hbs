{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}

<div class="post {{post_class}}">
	
	<div class="post-image" style="background-image: url({{image}});"></div>
	
	<div class="post-content">
	    <div class="post-header">
	        <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
	    </div>
	    <div class="post-excerpt">
	        <p>{{excerpt words="100"}} <a class="read-more" href="{{url}}">&raquo;</a></p>
	    </div>
	    <div class="post-meta">
		    
		    <div class="row">
			    
			    <div class="col-md-6">
				    
				    <div class="author">{{author}}</div>
				    
			    </div>
			    <div class="col-md-6">
				    
				    <div class="tags">{{tags separator=" "}}</div>
				    
			    </div>
			    
		    </div>
		    
	        {{#if author.image}}<img class="author-thumb" src="{{author.image}}" alt="Author image" nopin="nopin" />{{/if}}
	        
	        
	        <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
	        
	        
	        
	    </div>
    </div>
</div>
{{/foreach}}

{{! Previous/next page links - displayed on every page }}
{{pagination}}
